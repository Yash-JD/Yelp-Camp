<% layout('layouts/boilerplate') %>
    <h1>Sign Up!</h1>
    <form action="/signup" method="POST" class="validated-form" novalidate>
        <div class="mb-3">
            <label class="label-form" for="username">Username</label>
            <input class="form-control" type="text" id="username" name="username" required />
            <div class="valid-feedback">Look's Good!</div>
            <div class="invalid-feedback">Please enter your username !</div>
        </div>
        <div class="mb-3">
            <label class="label-form" for="email">Email</label>
            <input class="form-control" type="email" id="email" name="email" required />
            <div class="valid-feedback">Look's Good!</div>
            <div class="invalid-feedback">Please enter your email !</div>
        </div>
        <div class="mb-3">
            <label class="label-form" for="password">Password</label>
            <input class="form-control" type="password" id="password" name="password" required />
            <div class="valid-feedback">Look's Good!</div>
            <div class="invalid-feedback">Please enter you password !</div>
        </div>
        <button class="btn btn-success">Sign Up</button>
    </form>